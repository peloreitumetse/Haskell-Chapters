-- HC9T1

type Entity a = (String, a)
main :: IO ()
main = print (("Thandi", "Soweto") :: Entity String)

-- HC9T2

data Box a = Empty | Has a deriving Show
main :: IO ()
main = print (Has 10 :: Box Int)

-- HC9T3

addN :: Num a => a -> Box a -> Box a
addN n Empty = Empty
addN n (Has x) = Has (x + n)
main :: IO ()
main = print (addN 5 (Has 10))

-- HC9T4

extract :: a -> Box a -> a
extract def Empty = def
extract _ (Has x) = x
main :: IO ()
main = print (extract 0 Empty)

-- HC9T5

data ShapeParam a = Circle { colorC :: a, radius :: Float } | Rectangle { colorR :: a, width :: Float, height :: Float } deriving Show
main :: IO ()
main = do
  print (Circle "Red" 5)
  print (Rectangle "Blue" 10 5)

-- HC9T6

data Tweet = Tweet { content :: String, likes :: Int, comments :: [Tweet] } deriving Show
main :: IO ()
main = print (Tweet "Hello World" 10 [])

-- HC9T7

engagement :: Tweet -> Int
engagement (Tweet _ l cs) = l + sum (map engagement cs)
main :: IO ()
main = do
  let tweet1 = Tweet "Hi" 5 []
  let tweet2 = Tweet "Reply" 3 [tweet1]
  print (engagement tweet2)

-- HC9T8

data Sequence a = Nil | Node a (Sequence a) deriving Show
main :: IO ()
main = print (Node 1 (Node 2 (Node 3 Nil)))

-- HC9T9

elemSeq :: Eq a => a -> Sequence a -> Bool
elemSeq _ Nil = False
elemSeq e (Node x xs) = x == e || elemSeq e xs
main :: IO ()
main = print (elemSeq 2 (Node 1 (Node 2 (Node 3 Nil))))

-- HC9T10

data BST a = EmptyTree | NodeBST a (BST a) (BST a) deriving Show
main :: IO ()
main = print (NodeBST 10 (NodeBST 5 EmptyTree EmptyTree) (NodeBST 15 EmptyTree EmptyTree))
