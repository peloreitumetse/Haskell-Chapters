-- HC12T1
main :: IO ()
main = putStrLn "Welcome to Haskell Programming!"

-- HC12T2
addTwoNumbers :: Int -> Int -> Int
addTwoNumbers x y = x + y
main :: IO ()
main = print (addTwoNumbers 7 5)

-- HC12T3
factorial :: Int -> Int
factorial 0 = 1
factorial n = n * factorial (n - 1)
main :: IO ()
main = print (factorial 5)

-- HC12T4
fib :: Int -> Int
fib 0 = 0
fib 1 = 1
fib n = fib (n - 1) + fib (n - 2)
main :: IO ()
main = print (map fib [0..9])

-- HC12T5
isPalindrome :: String -> Bool
isPalindrome s = s == reverse s
main :: IO ()
main = do
  putStrLn "Enter a string:"
  str <- getLine
  putStrLn (if isPalindrome str then "Palindrome" else "Not a palindrome")

-- HC12T6
import Data.List (sort)
main :: IO ()
main = do
  putStrLn "Enter integers separated by spaces:"
  line <- getLine
  let nums = map read (words line) :: [Int]
  print (sort nums)

-- HC12T7
calculateCircleArea :: Float -> Float
calculateCircleArea r = pi * r * r
main :: IO ()
main = print (calculateCircleArea 5)

-- HC12T8
mergeLists :: Ord a => [a] -> [a] -> [a]
mergeLists [] ys = ys
mergeLists xs [] = xs
mergeLists (x:xs) (y:ys)
  | x <= y    = x : mergeLists xs (y:ys)
  | otherwise = y : mergeLists (x:xs) ys
main :: IO ()
main = print (mergeLists [1,3,5] [2,4,6])

-- HC12T9
import System.IO
import Control.Exception
main :: IO ()
main = do
  putStrLn "Enter filename:"
  filename <- getLine
  content <- try (readFile filename) :: IO (Either IOError String)
  case content of
    Left _ -> putStrLn "File not found or cannot be read."
    Right text -> putStrLn text

-- HC12T10
module MathOps (add, multiply) where
add :: Int -> Int -> Int
add x y = x + y
multiply :: Int -> Int -> Int
multiply x y = x * y

-- main file
import MathOps
main :: IO ()
main = do
  print (add 5 3)
  print (multiply 4 6)
